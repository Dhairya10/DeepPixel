<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linear_layout_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            app:srcCompat="@drawable/image" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="2"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_upload"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:padding="5dp"
            card_view:cardBackgroundColor="#000000"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:id="@+id/linear_layout_upload"
                android:layout_width='match_parent'
                android:layout_height='wrap_content'
                android:orientation='vertical'
                android:padding='5dp'>

                <ImageButton
                    android:id="@+id/image_button_upload"
                    android:layout_width='60dp'
                    android:layout_height='60dp'
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:src="@drawable/upload" />

                <TextView
                    android:id="@+id/text_view_upload"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/upload"
                    android:textAlignment="center"
                    android:textColor="@color/colorBackground" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_click"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:padding="5dp"
            card_view:cardBackgroundColor="#000000"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:id="@+id/linear_layout_click"
                android:layout_width='match_parent'
                android:layout_height='wrap_content'
                android:orientation='vertical'
                android:padding='5dp'>

                <ImageButton
                    android:id="@+id/image_button_click"
                    android:layout_width='60dp'
                    android:layout_height='60dp'
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:src="@drawable/click" />

                <TextView
                    android:id="@+id/text_view_click"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/click"
                    android:textAlignment="center"
                    android:textColor="@color/colorBackground" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_layout_effect"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:visibility="gone">

        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_sketch"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:padding="5dp"
            card_view:cardBackgroundColor="#000000"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:id="@+id/linear_layout_sketch"
                android:layout_width='match_parent'
                android:layout_height='wrap_content'
                android:orientation='vertical'
                android:padding='5dp'>

                <ImageButton
                    android:id="@+id/image_button_sketch"
                    android:layout_width='60dp'
                    android:layout_height='60dp'
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:src="@drawable/sketch" />

                <TextView
                    android:id="@+id/text_view_sketch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/sketch"
                    android:textAlignment="center"
                    android:textColor="@color/colorBackground" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_colormap"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:padding="5dp"
            card_view:cardBackgroundColor="#000000"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:id="@+id/linear_layout_colormap"
                android:layout_width='match_parent'
                android:layout_height='wrap_content'
                android:orientation='vertical'
                android:padding='5dp'>

                <ImageButton
                    android:id="@+id/image_button_colormap"
                    android:layout_width='60dp'
                    android:layout_height='60dp'
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:src="@drawable/colormap" />

                <TextView
                    android:id="@+id/text_view_colormap"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/colormap"
                    android:textAlignment="center"
                    android:textColor="@color/colorBackground" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>